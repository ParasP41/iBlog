<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="min-h-screen bg-gray-50">
    <%- include('./navbar') %>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <div class="mb-8">
            <h1 class="text-3xl font-bold text-gray-900">Dashboard</h1>
            <p class="text-gray-600 mt-2">
                Manage your blog posts and view analytics
            </p>
        </div>

        <!-- Simple Tab Navigation -->
        <div class="flex space-x-4 border-b border-gray-200">
            <button class="tab-button pb-3 px-1 font-medium text-sm border-b-2 border-transparent hover:border-gray-300 hover:text-gray-700 data-[state=active]:border-blue-500 data-[state=active]:text-blue-600 transition-colors duration-200" 
                    data-tab="overview" 
                    data-state="active">Overview</button>
            <button class="tab-button pb-3 px-1 font-medium text-sm border-b-2 border-transparent hover:border-gray-300 hover:text-gray-700 data-[state=active]:border-blue-500 data-[state=active]:text-blue-600 transition-colors duration-200" 
                    data-tab="posts" 
                    data-state="inactive"
                    data-is-post="true">Posts</button>
            <button class="tab-button pb-3 px-1 font-medium text-sm border-b-2 border-transparent hover:border-gray-300 hover:text-gray-700 data-[state=active]:border-blue-500 data-[state=active]:text-blue-600 transition-colors duration-200" 
                    data-tab="analytics" 
                    data-state="inactive">Analytics</button>
            <button class="tab-button pb-3 px-1 font-medium text-sm border-b-2 border-transparent hover:border-gray-300 hover:text-gray-700 data-[state=active]:border-blue-500 data-[state=active]:text-blue-600 transition-colors duration-200" 
                    data-tab="profile" 
                    data-state="inactive">Profile</button>
        </div>

        <!-- Tab Contents -->
        <div id="overview" class="tab-content pt-4">
            <%- include('tabs/overview') %>
        </div>

        <div id="posts" class="tab-content pt-4 hidden">
            <%- include('tabs/posts') %>
        </div>

        <div id="analytics" class="tab-content pt-4 hidden">
            <%- include('tabs/analytics') %>
        </div>

        <div id="profile" class="tab-content pt-4 hidden">
            <%- include('tabs/profile') %>
        </div>
    </div>

    <%- include('./footer') %>

    <script>
        // Tab switching functionality
        document.querySelectorAll('.tab-button').forEach(button => {
            button.addEventListener('click', () => {
                // Hide all tab contents
                document.querySelectorAll('.tab-content').forEach(content => {
                    content.classList.add('hidden');
                });
                
                // Show selected tab
                const tabId = button.getAttribute('data-tab');
                document.getElementById(tabId).classList.remove('hidden');
                
                // Update active tab styling
                document.querySelectorAll('.tab-button').forEach(btn => {
                    btn.setAttribute('data-state', 'inactive');
                });
                button.setAttribute('data-state', 'active');
                
                // Post tab specific logic
                if (button.hasAttribute('data-is-post')) {
                    console.log("Posts tab activated");
                    // Add your post-specific logic here
                }
            });
        });
    </script>
</body>
</html>