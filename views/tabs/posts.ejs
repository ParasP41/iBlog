    </div>
    <div class="p-6 pt-0">
        <form class="space-y-4">
            <!-- Form fields here -->
        </form>
    </div>
</div>

<!-- Empty State -->
<div class="rounded-lg border-2 border-dashed border-gray-300 mt-6 p-12 text-center">
    <i class="lucide lucide-file-text w-12 h-12 mx-auto text-gray-400"></i>
    <h3 class="mt-2 text-sm font-medium text-gray-900">No posts yet</h3>
    <p class="mt-1 text-sm text-gray-500">Get started by creating a new post.</p>
    <a href="/create/post" class="mt-6 inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 bg-blue-600 text-white hover:bg-blue-600/90 h-10 px-4 py-2">
